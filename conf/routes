# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# IoC
# For those controllers whose dependencie are being injected, we use the @controllers syntax here so that
# the router knows we are referring to a class (not an object). In turn it will call on the
# GlobalSettings.getControllerInstance method to resolve the actual controller instance. This method hooks into
# Guice to provide the actual instance complete with its injected dependencies

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                               controllers.Assets.at(path="/public", file)

######################
## DISPOSAL OF VEHICLE
######################

#page 1 - Before You Start (GET request not POST on submission because we are not posting any data)
GET         /                                                           controllers.Application.index
GET         /sell-to-the-trade/before-you-start                       @controllers.disposal_of_vehicle.BeforeYouStart.present
POST        /sell-to-the-trade/before-you-start                       @controllers.disposal_of_vehicle.BeforeYouStart.submit

#page 2 - setup-trade-details
GET         /sell-to-the-trade/setup-trade-details                    @controllers.disposal_of_vehicle.SetUpTradeDetails.present
POST        /sell-to-the-trade/setup-trade-details                    @controllers.disposal_of_vehicle.SetUpTradeDetails.submit

#page 3 - business choose your address
GET         /sell-to-the-trade/business-choose-your-address           @controllers.disposal_of_vehicle.BusinessChooseYourAddress.present
POST        /sell-to-the-trade/business-choose-your-address           @controllers.disposal_of_vehicle.BusinessChooseYourAddress.submit

#page 4 [optional] - enter address manually
GET         /sell-to-the-trade/enter-address-manually                 @controllers.disposal_of_vehicle.EnterAddressManually.present
POST        /sell-to-the-trade/enter-address-manually                 @controllers.disposal_of_vehicle.EnterAddressManually.submit

GET         /sell-to-the-trade/vehicle-lookup                         @controllers.disposal_of_vehicle.VehicleLookup.present
POST        /sell-to-the-trade/vehicle-lookup                         @controllers.disposal_of_vehicle.VehicleLookup.submit
GET         /sell-to-the-trade/vehicle-lookup/exit                    @controllers.disposal_of_vehicle.VehicleLookup.exit
GET         /sell-to-the-trade/vehicle-lookup-back                    @controllers.disposal_of_vehicle.VehicleLookup.back

GET         /sell-to-the-trade/complete-and-confirm                     @controllers.disposal_of_vehicle.Dispose.present
POST        /sell-to-the-trade/complete-and-confirm                     @controllers.disposal_of_vehicle.Dispose.submit

GET         /sell-to-the-trade/sell-to-the-trade-success                @controllers.disposal_of_vehicle.DisposeSuccess.present
POST        /sell-to-the-trade/sell-to-the-trade-success/new-disposal   @controllers.disposal_of_vehicle.DisposeSuccess.newDisposal
POST        /sell-to-the-trade/sell-to-the-trade-success/exit           @controllers.disposal_of_vehicle.DisposeSuccess.exit

GET         /sell-to-the-trade/sell-to-the-trade-failure                @controllers.disposal_of_vehicle.DisposeFailure.present

GET         /sell-to-the-trade/vehicle-lookup-failure                 @controllers.disposal_of_vehicle.VehicleLookupFailure.present
POST        /sell-to-the-trade/vehicle-lookup-failure                 @controllers.disposal_of_vehicle.VehicleLookupFailure.submit

GET         /sell-to-the-trade/uprn-not-found                         @controllers.disposal_of_vehicle.UprnNotFound.present

GET         /sell-to-the-trade/duplicate-sell-to-the-trade-error        @controllers.disposal_of_vehicle.DuplicateDisposalError.present

GET         /sell-to-the-trade/micro-service-error                    @controllers.disposal_of_vehicle.MicroServiceError.present

GET         /sell-to-the-trade/soap-endpoint-error                    @controllers.disposal_of_vehicle.SoapEndpointError.present

GET         /sell-to-the-trade/vrm-locked                             @controllers.disposal_of_vehicle.VrmLocked.present
POST        /sell-to-the-trade/vrm-locked/new-disposal                @controllers.disposal_of_vehicle.VrmLocked.newDisposal
POST        /sell-to-the-trade/vrm-locked/exit                        @controllers.disposal_of_vehicle.VrmLocked.exit

GET         /sell-to-the-trade/error/:exceptionDigest                 @controllers.disposal_of_vehicle.Error.present(exceptionDigest)
POST        /sell-to-the-trade/error/:exceptionDigest                 @controllers.disposal_of_vehicle.Error.submit(exceptionDigest)

GET         /sell-to-the-trade/help                                   @controllers.common.Help.present
POST        /sell-to-the-trade/help                                   @controllers.common.Help.back

GET         /with-language/:chosenLanguage                              controllers.common.AlternateLanguages.withLanguage(chosenLanguage: String)

GET         /healthcheck                                                @controllers.common.HealthCheck.respond