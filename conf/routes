# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# IoC
# For those controllers whose dependencie are being injected, we use the @controllers syntax here so that
# the router knows we are referring to a class (not an object). In turn it will call on the
# GlobalSettings.getControllerInstance method to resolve the actual controller instance. This method hooks into
# Guice to provide the actual instance complete with its injected dependencies




######################
## VRM RETENTION
######################

GET         /vrm-retention/assets/*file                              controllers.Assets.at(path="/public", file)

GET         /                                                        controllers.Application.index
GET         /vrm-retention                                           controllers.Application.index
GET         /vrm-retention/before-you-start                          @controllers.vrm_retention.BeforeYouStart.present

GET         /vrm-retention/vehicle-lookup                            @controllers.vrm_retention.VehicleLookup.present
POST        /vrm-retention/vehicle-lookup                            @controllers.vrm_retention.VehicleLookup.submit
GET         /vrm-retention/vehicle-lookup-back                       @controllers.vrm_retention.VehicleLookup.back

GET         /vrm-retention/vehicle-lookup-failure                    @controllers.vrm_retention.VehicleLookupFailure.present
POST        /vrm-retention/vehicle-lookup-failure                    @controllers.vrm_retention.VehicleLookupFailure.submit

GET         /vrm-retention/micro-service-error                       @controllers.vrm_retention.MicroServiceError.present

GET         /vrm-retention/soap-endpoint-error                       @controllers.vrm_retention.SoapEndpointError.present

GET         /vrm-retention/vrm-locked                                @controllers.vrm_retention.VrmLocked.present
POST        /vrm-retention/vrm-locked/exit                           @controllers.vrm_retention.VrmLocked.exit

GET         /vrm-retention/error/:exceptionDigest                    @controllers.vrm_retention.Error.present(exceptionDigest)
POST        /vrm-retention/error/:exceptionDigest                    @controllers.vrm_retention.Error.submit(exceptionDigest)

GET         /vrm-retention/check-eligibility                         @controllers.vrm_retention.CheckEligibility.present

GET         /vrm-retention/setup-business-details                    @controllers.vrm_retention.SetUpBusinessDetails.present
POST        /vrm-retention/setup-business-details                    @controllers.vrm_retention.SetUpBusinessDetails.submit

GET         /vrm-retention/business-choose-your-address              @controllers.vrm_retention.BusinessChooseYourAddress.present
POST        /vrm-retention/business-choose-your-address              @controllers.vrm_retention.BusinessChooseYourAddress.submit

GET         /vrm-retention/confirm                                   @controllers.vrm_retention.Confirm.present

GET         /vrm-retention/healthcheck                               @controllers.common.HealthCheck.respond

############ Demo screens

GET         /vrm-retention/user-details                              @controllers.vrm_retention.UserDetails.present

GET         /vrm-retention/enter-address-manually                    @controllers.vrm_retention.EnterAddressManually.present

GET         /vrm-retention/retain                                    @controllers.vrm_retention.Retain.present

GET         /vrm-retention/payment                                   @controllers.vrm_retention.Payment.present

GET         /vrm-retention/success                                   @controllers.vrm_retention.Success.present




# Map static resources from the /public folder to the /assets URL path
#GET         /assets/*file                                            controllers.Assets.at(path="/public", file)

